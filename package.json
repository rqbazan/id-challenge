{
  "name": "id-challenge-monorepo",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "license": "MIT",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "tsc:watch": "tsc -p backend -w",
    "nodemon": "nodemon",
    "dev": "run-p tsc:watch nodemon",
    "build": ". ./scripts/prebuild.sh && run-p build:*",
    "build:frontend": "next build frontend",
    "build:backend": "tsc -p backend && ef-tspm -c backend/tsconfig.json -r backend",
    "start": "NODE_ENV=production node ./backend/dist/src",
    "lint": "eslint --ignore-path .gitignore . --ext ts,js",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|js|json)\" \"!**/generated/**\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "run-p check-format lint build"
  },
  "nodemonConfig": {
    "exec": "node -r ./backend/bootstrap.js ./backend/dist/src",
    "ignore": [
      "frontend/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn workspaces run pre-commit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.0.9",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}
