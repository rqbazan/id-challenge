{
  "name": "id-challenge",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Ricardo Alexis Quiroz Bazan <raquirozbazan@gmail.com>",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "pre-dev": "rm -rf node_modules/.cache web/.next",
    "dev": "nodemon",
    "build": "next build web && babel server --out-dir dist",
    "start": "NODE_ENV=production node dist",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|json)\" \"!generated/**\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "npm-run-all --parallel check-format lint build"
  },
  "nodemonConfig": {
    "exec": "node -r esm -r dotenv/config server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --ignore-path .gitignore --write",
      "git add"
    ],
    "*.js": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@apollo/react-ssr": "^3.1.3",
    "@xstyled/styled-components": "^1.15.1",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.13",
    "apollo-link-context": "^1.0.19",
    "apollo-link-http": "^1.5.16",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "graphql-yoga": "^1.18.3",
    "isomorphic-unfetch": "^3.0.0",
    "nanoid": "^2.1.9",
    "next": "^9.1.7",
    "prisma-client-lib": "^1.34.10",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^5.0.0-rc.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-plugin-graphql-tag": "^2.5.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-plugin-styled-components": "^1.10.6",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-rqbazan-js": "^0.3.1",
    "eslint-import-resolver-babel-module": "^5.1.1",
    "esm": "^3.2.25",
    "husky": "^4.0.6",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prisma": "^1.34.10"
  }
}
