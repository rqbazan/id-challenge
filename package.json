{
  "name": "id-challenge-monorepo",
  "private": true,
  "engines": {
    "node": "12.x"
  },
  "license": "MIT",
  "workspaces": [
    "api",
    "web"
  ],
  "scripts": {
    "dev:web": "yarn workspace web run dev",
    "dev:api": "yarn workspace api run dev",
    "build:web": "yarn workspace web run build",
    "build:api": "yarn workspace api run build",
    "dev": "run-p dev:*",
    "build": "run-p build:*",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(ts|js|json)\" \"!**/generated/**\"",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "validate": "run-p check-format lint build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --ignore-path .gitignore --write",
      "git add"
    ],
    "*.{ts,js}": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "husky": "^4.0.6",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1"
  }
}
